@model WhiteLagoon.Domain.Entities.Villa

<div class="row g-4">
    <div class="col-md-6">
        <img src="@Model.ImageUrl" class="img-fluid rounded-3" alt="@Model.Name" 
             style="height: 350px; object-fit: cover; width: 100%;">
    </div>
    <div class="col-md-6">
        <h3 class="text-light mb-3">@Model.Name</h3>
        <p class="text-muted mb-4">@Model.Description</p>
        
        <div class="d-flex mb-4">
            <div class="me-4">
                <div class="text-primary fs-1 fw-bold">$@Model.Price.ToString("0.00")</div>
                <div class="text-muted small">per night</div>
            </div>
            <div>
                <div class="text-light fs-3 fw-bold">@Model.Occupancy</div>
                <div class="text-muted small">guests max</div>
            </div>
        </div>
        
        <div class="mb-4">
            <h5 class="text-light mb-3"><i class="bi bi-house-door me-2"></i>Villa Details</h5>
            <ul class="list-unstyled">
                <li class="mb-2 text-light"><i class="bi bi-arrow-right-circle me-2 text-primary"></i>@Model.MeterSquared mÂ² living space</li>
                <li class="mb-2 text-light"><i class="bi bi-arrow-right-circle me-2 text-primary"></i>Created: @Model.CreatedAt.ToString("MMM dd, yyyy")</li>
                <li class="mb-2 text-light"><i class="bi bi-arrow-right-circle me-2 text-primary"></i>Updated: @Model.UpdatedAt.ToString("MMM dd, yyyy")</li>
            </ul>
        </div>
    </div>
    
    <div class="col-12">
        <h5 class="text-light mb-3 mt-2"><i class="bi bi-stars me-2"></i>Premium Amenities</h5>
        <div class="row g-3">
            @if (Model.VillaAmenity != null && Model.VillaAmenity.Any())
            {
                @foreach (var amenity in Model.VillaAmenity)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="p-3 bg-darker rounded-3 border border-secondary">
                            <h6 class="text-primary mb-1">@amenity.Name</h6>
                            <p class="text-muted mb-0 small">@amenity.Description</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-muted text-center py-3">No amenities available for this villa yet.</p>
                </div>
            }
        </div>
    </div>
</div>