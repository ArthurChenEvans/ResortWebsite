@model IEnumerable<WhiteLagoon.Domain.Entities.Amenity>

@{
    ViewData["Title"] = "Amenities";
}

<div class="py-5 bg-gradient-primary">
    <div class="container">
        <div class="text-center mb-4">
            <h1 class="display-4 fw-bold text-light">Amenities</h1>
            <p class="lead text-muted">Manage property amenities and features</p>
        </div>
    </div>
</div>

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <a asp-action="Create" class="btn btn-primary px-4 py-2">
                <i class="bi bi-plus-circle me-2"></i>Add New Amenity
            </a>
        </div>
        <div class="col-md-4">
            <div class="input-group">
                <input type="text" class="form-control bg-darker border-secondary text-light" 
                       placeholder="Search amenities...">
                <button class="btn btn-outline-secondary bg-darker border-secondary" type="button">
                    <i class="bi bi-search text-light"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="card bg-dark border-secondary shadow-lg rounded-4 overflow-hidden">
        <div class="card-header bg-darker py-3">
            <h2 class="text-light mb-0"><i class="bi bi-list-ul me-2"></i>Amenities List</h2>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-dark table-hover mb-0">
                    <thead class="bg-darker">
                        <tr>
                            <th class="px-4 py-3">ID</th>
                            <th class="px-4 py-3">Name</th>
                            <th class="px-4 py-3">Description</th>
                            <th class="px-4 py-3">Villa</th>
                            <th class="px-4 py-3 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-bottom border-secondary">
                                <td class="px-4 py-3">@item.Id</td>
                                <td class="px-4 py-3 fw-medium">@item.Name</td>
                                <td class="px-4 py-3">@item.Description?.Substring(0, Math.Min(item.Description.Length, 50))@(item.Description?.Length > 50 ? "..." : "")</td>
                                <td class="px-4 py-3">
                                    <span class="badge bg-primary-soft">@item.Villa?.Name</span>
                                </td>
                                <td class="px-4 py-3 text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="Update" asp-route-amenity="@item.Id" class="btn btn-sm btn-warning text-dark">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-amenity="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (!Model.Any())
            {
                <div class="p-5 text-center text-muted">
                    <i class="bi bi-inbox fs-1 mb-3 d-block"></i>
                    <p class="lead">No amenities found</p>
                    <p class="text-muted">Add your first amenity to get started</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #0f172a, #1e293b, #334155);
    }
    .bg-darker {
        background-color: #0a0f1a !important;
    }
    .card {
        border: 1px solid #334155;
    }
    .table-dark {
        --bs-table-bg: #0f172a;
        --bs-table-striped-bg: #151f30;
        --bs-table-hover-bg: #1e293b;
    }
    .badge {
        padding: 0.5em 0.8em;
        font-size: 0.85em;
    }
    .bg-primary-soft {
        background-color: rgba(59, 130, 246, 0.15);
        color: #3b82f6;
    }
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
    .table-responsive {
        border-radius: 0 0 1rem 1rem;
        overflow: hidden;
    }
    .border-secondary {
        border-color: #334155 !important;
    }
</style>