@model WhiteLagoon.Domain.Entities.Booking

<div class="container pt-4 mt-5 mb-5">
    <div class="card bg-darker border-secondary shadow-lg rounded-4 overflow-hidden">
        <form method="post">
            <input asp-for="VillaId" hidden />
            <input asp-for="UserId" hidden />
            <input asp-for="CheckInDate" hidden />
            <input asp-for="CheckOutDate" hidden />
            <input asp-for="Nights" hidden />
            <input asp-for="TotalCost" hidden />

            <div class="card-header bg-dark border-bottom border-secondary py-3">
                <div class="row align-items-center">
                    <div class="col-8">
                        <h3 class="text-light mb-0"><i class="bi bi-journal-check me-2 text-primary"></i>Finalize Booking</h3>
                    </div>
                    <div class="col-4 text-end">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-danger rounded-pill">
                            <i class="bi bi-x-circle me-1"></i> Modify Selection
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-body p-4 p-lg-5">
                <div class="row g-5">
                    <div class="col-lg-7">
                        <div class="pe-lg-4 border-end border-secondary">
                            <h4 class="text-primary mb-4">Villa Details</h4>
                            
                            <img src="@Model.Villa.ImageUrl" class="img-fluid rounded-4 mb-4 shadow" 
                                 style="width: 100%; height: 300px; object-fit: cover;" />
                            
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h2 class="text-light fw-bold">@Model.Villa.Name</h2>
                                <span class="badge bg-primary fs-5">$@Model.Villa.Price / night</span>
                            </div>

                            <p class="text-muted mb-4">@Model.Villa.Description</p>

                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <h5 class="text-light mb-3">Amenities</h5>
                                    <ul class="list-unstyled">
                                        @if (Model.Villa.VillaAmenity != null)
                                        {
                                            foreach (var amenity in Model.Villa.VillaAmenity)
                                            {
                                                <li class="text-muted mb-1 small">
                                                    <i class="bi bi-check2-circle text-success me-2"></i>@amenity.Name
                                                </li>
                                            }
                                        }
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h5 class="text-light mb-3">Villa Specs</h5>
                                    <div class="text-muted small mb-1"><i class="bi bi-people me-2"></i>Max Occupancy: @Model.Villa.Occupancy adults</div>
                                    <div class="text-muted small mb-1"><i class="bi bi-arrows-fullscreen me-2"></i>Size: @Model.Villa.MeterSquared mÂ²</div>
                                </div>
                            </div>

                            <div class="mt-5 p-3 rounded-3 bg-dark border border-secondary text-center">
                                <span class="text-muted text-uppercase fw-bold small d-block mb-1">Total Stay Cost</span>
                                <h2 class="text-light fw-bold mb-0">Booking Total: <span class="text-primary">$@Model.TotalCost.ToString("N2")</span></h2>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-5">
                        <h4 class="text-primary mb-4">Enter Booking Details</h4>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label text-light fw-medium">Full Name</label>
                            <input asp-for="Name" class="form-control bg-dark border-secondary text-light py-2" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label text-light fw-medium">Phone Number</label>
                            <input asp-for="Phone" class="form-control bg-dark border-secondary text-light py-2" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label text-light fw-medium">Email Address</label>
                            <input asp-for="Email" class="form-control bg-dark border-secondary text-light py-2" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <hr class="border-secondary my-4" />

                        <div class="row g-3 mb-4">
                            <div class="col-6">
                                <label class="text-muted small fw-bold text-uppercase">Check-in</label>
                                <input class="form-control bg-darker border-secondary text-light-50" 
                                       value="@Model.CheckInDate.ToString("MM/dd/yyyy")" disabled />
                            </div>
                            <div class="col-6">
                                <label class="text-muted small fw-bold text-uppercase">Check-out</label>
                                <input class="form-control bg-darker border-secondary text-light-50" 
                                       value="@Model.CheckOutDate.ToString("MM/dd/yyyy")" disabled />
                            </div>
                            <div class="col-12">
                                <label class="text-muted small fw-bold text-uppercase">Duration</label>
                                <input class="form-control bg-darker border-secondary text-light-50" 
                                       value="@Model.Nights @(Model.Nights > 1 ? "Nights" : "Night")" disabled />
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-3 fw-bold fs-5 rounded-3 shadow-lg hover-lift">
                            Looks Good! Checkout Now <i class="bi bi-credit-card ms-2"></i>
                        </button>
                        
                        <p class="text-center text-muted small mt-3">
                            <i class="bi bi-shield-lock me-1"></i> Secure Payment via Stripe
                        </p>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #0f172a;
    }
    .bg-darker {
        background-color: #0a0f1a !important;
    }
    .text-light-50 {
        color: rgba(255, 255, 255, 0.5) !important;
    }
    .hover-lift:hover {
        transform: translateY(-3px);
        transition: all 0.2s ease;
        box-shadow: 0 8px 20px rgba(59, 130, 246, 0.3) !important;
    }
    .form-control:focus {
        background-color: #0f172a;
        border-color: #3b82f6;
        color: white;
        box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.25);
    }
    input:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}