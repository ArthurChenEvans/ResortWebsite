@model ResortWebsite.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="py-5 bg-gradient-primary">
    <div class="container">
        <div class="text-center mb-4">
            <h1 class="display-4 fw-bold text-light">Register</h1>
            <p class="lead text-muted">Create your new account</p>
        </div>
    </div>
</div>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card bg-dark border-secondary shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-darker py-3 text-center">
                    <h2 class="text-light mb-0 fw-bold">
                        <i class="bi bi-person-plus me-2"></i>Create Account
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register" method="post">
                        <input asp-for="ReturnUrl" type="hidden" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>
                        
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label text-light fw-medium"></label>
                            <input asp-for="Name" class="form-control bg-darker border-secondary text-light" 
                                   placeholder="John Doe">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label text-light fw-medium"></label>
                            <input asp-for="Email" class="form-control bg-darker border-secondary text-light" 
                                   placeholder="example@email.com">
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="PhoneNumber" class="form-label text-light fw-medium"></label>
                            <input asp-for="PhoneNumber" class="form-control bg-darker border-secondary text-light" 
                                   placeholder="(123) 456-7890">
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>
                        
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label text-light fw-medium"></label>
                                <input asp-for="Password" type="password" class="form-control bg-darker border-secondary text-light" 
                                       placeholder="••••••••">
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label text-light fw-medium"></label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control bg-darker border-secondary text-light" 
                                       placeholder="••••••••">
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Role" class="form-label text-light fw-medium">Account Type</label>
                            <select asp-for="Role" asp-items="Model.Roles" 
                                    class="form-select bg-darker border-secondary text-light">
                                <option value="">-- Select Role --</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-grid gap-3 mt-4">
                            <button type="submit" class="btn btn-primary px-4 py-2 fw-medium">
                                <i class="bi bi-person-plus me-1"></i>Create Account
                            </button>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary px-4 py-2">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Sign In Instead
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #0f172a, #1e293b, #334155);
    }
    .bg-darker {
        background-color: #0a0f1a !important;
    }
    .card {
        border: 1px solid #334155;
    }
    .form-control, .form-select {
        transition: border-color 0.2s;
    }
    .form-control:focus, .form-select:focus {
        border-color: #3b82f6 !important;
        box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.25);
    }
    .alert {
        background-color: rgba(220, 38, 38, 0.15);
        border-color: #dc2626;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}