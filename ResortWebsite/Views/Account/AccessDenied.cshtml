@{
    ViewData["Title"] = "Access Denied";
}

<div class="py-5 bg-gradient-primary">
    <div class="container">
        <div class="text-center mb-4">
            <h1 class="display-4 fw-bold text-light">Access Denied</h1>
            <p class="lead text-muted">You don't have permission to access this resource</p>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card bg-dark border-secondary shadow-lg rounded-4 overflow-hidden">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-shield-exclamation fs-1 text-warning"></i>
                    </div>
                    <h2 class="text-light mb-3">Permission Required</h2>
                    <p class="text-muted mb-4">
                        You need additional permissions to view this page. Please contact your administrator or try logging in with a different account.
                    </p>
                    
                    <div class="d-grid gap-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4 py-2">
                            <i class="bi bi-house me-1"></i>Return to Home
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary px-4 py-2">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Sign In Again
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #0f172a, #1e293b, #334155);
    }
    .card {
        border: 1px solid #334155;
    }
</style>