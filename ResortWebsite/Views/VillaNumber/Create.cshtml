<!-- Create.cshtml -->
@model ResortWebsite.ViewModels.VillaNumberViewModel

@{
    ViewData["Title"] = "Create Room";
}

<div class="py-5 bg-gradient-primary">
    <div class="container">
        <div class="text-center mb-4">
            <h1 class="display-4 fw-bold text-light">New Room</h1>
            <p class="lead text-muted">Assign a new room to a villa</p>
        </div>
    </div>
</div>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card bg-dark border-secondary shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-darker py-3">
                    <h2 class="text-light mb-0"><i class="bi bi-door-open me-2"></i>Create Room</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>
                        
                        <div class="mb-4">
                            <label asp-for="VillaNumber.VillaId" class="form-label text-light fw-medium"></label>
                            <select asp-for="VillaNumber.VillaId" asp-items="@Model.Villas" 
                                    class="form-select bg-darker border-secondary text-light">
                                <option disabled selected>Select a villa</option>
                            </select>
                            <span asp-validation-for="VillaNumber.VillaId" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="VillaNumber.Villa_Number" class="form-label text-light fw-medium"></label>
                            <input asp-for="VillaNumber.Villa_Number" class="form-control bg-darker border-secondary text-light" 
                                   placeholder="101">
                            <span asp-validation-for="VillaNumber.Villa_Number" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="VillaNumber.SpecialDetails" class="form-label text-light fw-medium"></label>
                            <textarea asp-for="VillaNumber.SpecialDetails" class="form-control bg-darker border-secondary text-light" 
                                      rows="3" placeholder="Ocean view balcony with private hot tub"></textarea>
                            <span asp-validation-for="VillaNumber.SpecialDetails" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-flex gap-3 mt-5">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 flex-fill">
                                <i class="bi bi-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4 py-2 flex-fill fw-medium">
                                <i class="bi bi-check-circle me-1"></i>Create Room
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #0f172a, #1e293b, #334155);
    }
    .bg-darker {
        background-color: #0a0f1a !important;
    }
    .form-control, .form-select {
        transition: border-color 0.2s;
    }
    .form-control:focus {
        border-color: #3b82f6 !important;
        box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.25);
    }
    .input-group-text {
        background-color: #1e293b !important;
    }
    .card {
        border: 1px solid #334155;
    }
    .alert {
        background-color: rgba(220, 38, 38, 0.15);
        border-color: #dc2626;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}