@model WhiteLagoon.Domain.Entities.Villa

@{
    ViewData["Title"] = "Create Villa";
}

<div class="py-5 bg-gradient-primary">
    <div class="container">
        <div class="text-center mb-4">
            <h1 class="display-4 fw-bold text-light">New Villa</h1>
            <p class="lead text-muted">Add a new luxury property to your collection</p>
        </div>
    </div>
</div>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card bg-dark border-secondary shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-darker py-3">
                    <h2 class="text-light mb-0"><i class="bi bi-house-add me-2"></i>Create Villa</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>
                        
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label text-light fw-medium"></label>
                            <input asp-for="Name" class="form-control bg-darker border-secondary text-light" 
                                   placeholder="Azure Haven">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label text-light fw-medium"></label>
                            <textarea asp-for="Description" class="form-control bg-darker border-secondary text-light" 
                                      rows="3" placeholder="Serene coastal villa with panoramic views"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                        
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label text-light fw-medium"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-darker border-secondary text-primary">$</span>
                                    <input asp-for="Price" type="number" step="0.01" 
                                           class="form-control bg-darker border-secondary text-light" 
                                           placeholder="450.00">
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MeterSquared" class="form-label text-light fw-medium"></label>
                                <div class="input-group">
                                    <input asp-for="MeterSquared" type="number" 
                                           class="form-control bg-darker border-secondary text-light" 
                                           placeholder="220">
                                    <span class="input-group-text bg-darker border-secondary text-light">mÂ²</span>
                                </div>
                                <span asp-validation-for="MeterSquared" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Occupancy" class="form-label text-light fw-medium"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-darker border-secondary">
                                        <i class="bi bi-people text-primary"></i>
                                    </span>
                                    <input asp-for="Occupancy" type="number" 
                                           class="form-control bg-darker border-secondary text-light" 
                                           placeholder="6">
                                </div>
                                <span asp-validation-for="Occupancy" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ImageUrl" class="form-label text-light fw-medium"></label>
                                <input asp-for="ImageUrl" class="form-control bg-darker border-secondary text-light" 
                                       placeholder="https://placehold.co/600x400">
                                <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Image" class="form-label text-light fw-medium">Villa Image</label>
                            <input asp-for="Image" type="file" class="form-control bg-darker border-secondary text-light" 
                                   accept="image/*">
                            <div class="form-text text-muted small">Upload a high-quality image of the villa (JPG, PNG, WEBP)</div>
                            <span asp-validation-for="Image" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-flex gap-3 mt-5">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 flex-fill">
                                <i class="bi bi-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4 py-2 flex-fill fw-medium">
                                <i class="bi bi-check-circle me-1"></i>Create Villa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #0f172a, #1e293b, #334155);
    }
    .bg-darker {
        background-color: #0a0f1a !important;
    }
    .form-control, .form-select {
        transition: border-color 0.2s;
    }
    .form-control:focus {
        border-color: #3b82f6 !important;
        box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.25);
    }
    .input-group-text {
        background-color: #1e293b !important;
    }
    .card {
        border: 1px solid #334155;
    }
    .alert {
        background-color: rgba(220, 38, 38, 0.15);
        border-color: #dc2626;
    }
    .form-control[type="file"] {
        background-color: #1e293b !important;
        color: #f1f5f9;
        padding: 0.5rem 1rem;
        border: 1px solid #334155;
    }
    .form-control[type="file"]::file-selector-button {
        background-color: #3b82f6;
        color: white;
        border: none;
        padding: 0.375rem 0.75rem;
        margin-right: 0.5rem;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.2s;
    }
    .form-control[type="file"]::file-selector-button:hover {
        background-color: #2563eb;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}